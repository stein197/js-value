{
	"compilerOptions": {
		"outDir": "out",
		"target": "ESNext",
		"strict": true,
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"*.ts"
	],
	"exclude": [
		"out"
	]
}
